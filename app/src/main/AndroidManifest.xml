<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.edu.pw.mini.namefactory">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".RankingList"
            android:label="@string/title_activity_ranking_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NameCard"
            android:label="@string/title_activity_name_card"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Evaluation"
            android:label="@string/title_activity_evaluation" />
        <activity android:name=".RankingView"
            android:label="@string/title_activity_ranking_view"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Filters"
            android:label="@string/title_activity_filters" />
        <activity android:name=".RankingsJoiningRequest"
            android:label="@string/title_activity_ranking_joining" />
        <activity android:name=".NewRanking"
            android:label="@string/title_activity_new_ranking"/>
        <activity android:name=".RankingsJoiningAccept"></activity>
    </application>

</manifest>