<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
     dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_origin_titles"
        android:entryValues="@array/pref_origin_values"
        android:key="origin"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_origin"
        android:summary="@string/pref_description_origin"/>

    <pl.edu.pw.mini.namefactory.GenderPreference
        android:key="gender"
        android:title="Gender:"
        android:defaultValue="true" />

</PreferenceScreen>